mkdir INPUT DATM_INPUT RESTART history MOM6_OUTPUT


# FV3 fixed input
cp    @[RTPWD]/DATM/cfsr.SCRIP.nc DATM_INPUT
export IATM=1760
export JATM=880
export OCNRES='100'
export MOM6_RESTART_SETTING='n'
