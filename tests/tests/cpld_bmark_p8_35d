export BLCKX=`expr $NX_GLB / $np2`
export BLCKY=`expr $NY_GLB / 2`
export WAVDOMAIN=gwes_30m
export MESH_WAV=mesh.${WAVDOMAIN}.nc

# set component and coupling timesteps
